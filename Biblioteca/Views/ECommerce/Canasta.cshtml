@model IEnumerable<Biblioteca.Models.Registro>

@{
    ViewData["Title"] = "Canasta";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"  />

<h1>Canasta</h1>

<p>
    <a asp-action="Portal" class="btn btn-primary">Seguir Comprando</a>
    <a asp-action="Pedido" class="btn btn-primary">Registrar Pedido</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idRevista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreRevista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idRevista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRevista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id=item.idRevista },new { @class = "btn btn-danger" })

                
            </td>
        </tr>
}   <tr>
        <td colspan=5>Total del pedido</td>
        <td>@Model.Sum(x=>x.monto) </td>
    </tr>
    </tbody>
</table>
