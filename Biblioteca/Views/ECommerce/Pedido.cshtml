@model IEnumerable<Biblioteca.Models.Registro>

@{
    ViewData["Title"] = "Pedido";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"  />
<h1>Pedido</h1>



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idRevista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreRevista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idRevista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRevista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
           
        </tr>
}<tr>
    <td colspan="5">Monto del Pedido</td>
    <td>@Model.Sum(x=>x.monto)</td>
</tr>
    </tbody>
</table>



<div>

    @using(Html.BeginForm())
    {
        <table style="margin:0 auto;">
            <tr>
               <td>DNI del Cliente</td> 
               <td>@Html.TextBox("dni","")</td> 
                   
            </tr>
            <tr>
               <td>Nombre del Cliente</td> 
               <td>@Html.TextBox("nombre","")</td> 
                   
            </tr>
            <tr>
               <td>@Html.ActionLink("Seguir Comprando","Portal", null, new{@class="btn btn-primary"})</td> 
               <td><input type="submit" value="Registrar Pedido" class="btn btn-primary" /></td>
                   
            </tr>
        </table>

    }

</div>
