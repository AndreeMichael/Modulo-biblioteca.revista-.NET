@model Biblioteca.Models.Revista

@{
    ViewData["Title"] = "Seleccionar";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"  />

<h1>Seleccionar</h1>





                <div class="card text-center" style="margin:auto;">
          <div class="card-header">
            Agregar
          </div>
          <div class="card-body">
              <div>
    <h4>Revista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idRevista)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idRevista)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRevista)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreRevista)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stock)
        </dd>
    </dl>
</div>
            <form asp-action="Seleccionar" method="post">
                <h5 class="card-title">Special title treatment</h5>
                @Html.Hidden("codigo", Model.idRevista)
                <em>Ingrese la cantidad</em>
                @Html.TextBox("cantidad",1,new{type="number", min=1,max=Model.stock})
                <br />
                <input type="submit" value="Agregar" class="btn btn-primary" />
                <a asp-action="Portal" class="btn btn-primary">Ir al Portal</a>
   
            </form>
            <div>
            <div class="alert alert-success" role="alert">
              @ViewBag.mensaje
            </div>
    
</div>
          </div>
          <div class="card-footer text-muted">
            Copyright
          </div>
        </div>

<div>
    @ViewBag.mensaje
</div>

